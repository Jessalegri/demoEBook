{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "strict": true,
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"] // Añade esto para que @/ apunte a src/
      },
      "types": ["node"] // Añade esto para soportar __dirname y path en vite.config.ts
    },
    "include": ["src/**/*", "vite.config.ts"], // Cambia a esto para incluir todos los archivos en src/ y vite.config.ts
    "exclude": ["node_modules"]
  }